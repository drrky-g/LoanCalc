@model bool
@if (Model) {
    <form id="centerForm">
        <input class="form-control" id="amount" type="number" placeholder="Amount of Loan ($)" />
        <input class="form-control" id="months" type="number" placeholder="Term in Months" />
        <input class="form-control" id="rate" type="number" placeholder="Interest Rate (%)" />
        <button class="btn myButton" id="calculate">Calculate</button>
    </form>
} else {
    <div class="row col" style="margin: 1rem 0;">
        <div class="form-inline">
            <div class="form-group">
                <label for="amount">Amount ($):</label>
                <input class="form-control" type="number" id="amount" placeholder="Amount of Loan ($)" />
            </div>
            <div class="form-group">
                <label for="months">Months:</label>
                <input class="form-control" type="number" id="months" placeholder="Term in Months" />
            </div>
            <div class="form-group">
                <label for="rate">Interest Rate (%):</label>
                <input class="form-control" type="number" id="rate" placeholder="Interest Rate (%)" />
            </div>
            <button class="btn btn-lg myButton" id="newCalc">Calculate</button>
        </div>
    </div>
}
