<script>
    var chartArea = $('#chart');
    var loanChart = new Chart(chartArea, {
        type: 'bar',
        data: {
            datasets: [{
                label: 'Interest Payment',
                data: [10, 20, 30, 40]
            }, {
                label: 'Total Payment',
                data: [50, 50, 50, 50],

                // Changes this dataset to become a line
                type: 'line'
            }],
            labels: ['January', 'February', 'March', 'April']
        }
    });
</script>